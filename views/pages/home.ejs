<script>
// Add this at the beginning of your script section
window.addEventListener('scroll', function() {
    const scrollPosition = window.scrollY;
    const blurValue = Math.min(scrollPosition / 30, 10); // Max blur of 10px
    document.querySelector('.blur-overlay').style.backdropFilter = `blur(${blurValue}px)`;
});

function changeImage(src) {
    const mainImage = document.getElementById('mainImage');
    mainImage.style.opacity = '0';
    setTimeout(() => {
        mainImage.src = src;
        mainImage.style.opacity = '1';
    }, 300);
    
    // Update active thumbnail
    document.querySelectorAll('.thumbnail').forEach(thumb => {
        thumb.classList.remove('active');
        if(thumb.src === src) thumb.classList.add('active');
    });
}

// Add this to your existing scripts
document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.slider-wrapper');
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;
    
    function updateSlider() {
        const slideWidth = slides[0].offsetWidth + 30;
        const containerWidth = document.querySelector('.slider-container').offsetWidth;
        const offset = (containerWidth - slideWidth) / 2;
        slider.style.transform = `translateX(${offset - (currentSlide * slideWidth)}px)`;
        
        slides.forEach((slide, index) => {
            slide.classList.toggle('active', index === currentSlide);
        });
    }
    
    function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length;
        updateSlider();
    }
    
    // Auto advance every 3 seconds
    setInterval(nextSlide, 3000);
    
    // Initial setup
    updateSlider();
    
    // Update on resize
    window.addEventListener('resize', updateSlider);
});

// Add this to your existing scripts
document.addEventListener('DOMContentLoaded', function() {
    const buyBtn = document.querySelector('.floating-buy-wrapper');
    const productSection = document.querySelector('.product-preview');
    
    function checkScroll() {
        if (!productSection) return;
        
        const rect = productSection.getBoundingClientRect();
        const isVisible = rect.top <= window.innerHeight && rect.bottom >= 0;
        
        if (isVisible) {
            buyBtn.classList.add('show');
        } else {
            buyBtn.classList.remove('show');
        }
    }

    window.addEventListener('scroll', checkScroll);
    checkScroll(); // Initial check
});

// Update the buy now button handler
document.querySelector('.add-to-cart-btn').addEventListener('click', () => {
    const token = localStorage.getItem('token');
    if (!token) {
        showToast('Please login to continue', 'error');
        setTimeout(() => {
            window.location.href = '/login';
        }, 2000);
        return;
    }
    
    // Store product image for checkout page
    localStorage.setItem('productImage', document.getElementById('mainImage').src);
    window.location.href = '/checkout';
});

function calculateDeliveryDate() {
    const today = new Date();
    const deliveryDate = new Date(today);
    deliveryDate.setDate(today.getDate() + 2); // Add 2 days for delivery

    const options = { 
        weekday: 'long', 
        month: 'short', 
        day: 'numeric', 
        year: 'numeric' 
    };
    
    const formattedDate = deliveryDate.toLocaleDateString('en-US', options);
    document.getElementById('deliveryDate').textContent = formattedDate;
}

document.addEventListener('DOMContentLoaded', function() {
    calculateDeliveryDate();
